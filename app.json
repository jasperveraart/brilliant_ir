{
  "id": "nl.jasperveraart.brilliant",
  "name": {
    "en": "Ceiling Fan",
    "nl": "Plafondventilator"
  },
  "version": "3.0.3",
  "sdk": 3,
  "compatibility": ">=5.0.0",
  "brandColor": "#AB234A",
  "author": {
    "name": "Jasper Veraart",
    "email": "support@athom.com"
  },
  "description": {
    "en": "Control your ceiling fan using Infrared.",
    "nl": "Bestuur je plafondventilator met Infrarood."
  },
  "category": "video",
  "images": {
    "small": "./assets/images/small.jpg",
    "large": "./assets/images/large.jpg"
  },
  "permissions": [
    "homey:wireless:ir"
  ],
  "drivers": [
    {
      "name": {
        "en": "Ceiling Fan"
      },
      "class": "other",
      "images": {
        "small": "/drivers/ceiling_fan/assets/images/small.jpg",
        "large": "/drivers/ceiling_fan/assets/images/large.jpg"
      },
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "rf_ir_remote_learn",
          "navigation": {
            "next": "rf_ir_remote_add"
          },
          "options": {
            "title": {
              "en": "Connect your Ceiling Fan",
              "nl": "Koppel je plafondventilator"
            },
            "instruction": {
              "en": "Press next to connect your Ceiling Fan.",
              "nl": "Druk op volgende om je plafondventilator te koppelen."
            }
          }
        },
        {
          "id": "rf_ir_remote_add"
        }
      ],
      "id": "ceiling_fan"
    }
  ],
  "signals": {
    "ir": {
      "ceiling_fan": {
        "carrier": 38000,
        "sof": [9000, 4500],
        "eof": [560],
        "words": [[560, 560], [560, 1690]],
        "minimalLength": 32,
        "maximalLength": 32,
        "interval": 1000,
        "sensitivity": 0.7,
        "repetitions": 1,
        "cmds": {
          "LIGHT_TOGGLE": [29,0,0,0],
          "LIGHT_BRIGTER": [18,0,0,0],
          "LIGHT_DARKER": [5,0,0,0],
          "LIGHT_WARMER": [30,0,0,0],
          "LIGHT_COLDER": [26,0,0,0],
          "FAN_OFF": [31,0,0,0],
          "FAN_WIND": [76,0,0,0],
          "FAN_TIMMER": [3,0,0,0],
          "FAN_INCREASE": [27,0,0,0],
          "FAN_DECREASE": [17,0,0,0],
          "FAN_TURN": [7,0,0,0],
          "RGB_TOGGLE": [28,0,0,0],
          "RGB_CHANGE": [10,0,0,0],
          "RGB_FASTER": [11,0,0,0],
          "RGB_SLOWER": [16,0,0,0]
        }
      }
    }
  }
}
